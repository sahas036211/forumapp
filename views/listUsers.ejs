<!--The page which list every username in the database -->
<!doctype html>
<html lang="en">
    <head>
        <title>Welcome to <%=forumName%></title>
        <!-- Linking my CSS -->
        <link rel="stylesheet"  type="text/css" href="main.css" />
    </head>
    <body>
        <hq>Here are the users that we have on <span class="forum-name"><%= forumName %></span></h1>
        <ul>
            <!-- Loop through the users and display them -->
        <% availableUsers.forEach(function(userDetails) { %>
            <li><%=userDetails.username%></li>
        <% }) %>
        </ul>
        <!-- Link to the homepage -->
        <div class="return-home">
            <a href="/">Return Home</a>
        </div>
    </body>
</html>